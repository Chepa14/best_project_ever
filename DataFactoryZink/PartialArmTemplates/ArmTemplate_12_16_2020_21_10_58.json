					"location": {
						"type": "AzureDataLakeStoreLocation",
						"folderPath": {
							"value": "/data/@{formatDateTime(adddays(utcnow(),-1),'yyyy')}/@{formatDateTime(adddays(utcnow(),-1),'MM')}/@{formatDateTime(adddays(utcnow(),-1),'dd')}\n",
